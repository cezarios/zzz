<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>
    <link rel="stylesheet" href="children.css">

    <title>Children</title>
</head>
<body>
<div class="nbar" style="padding: 16px; margin: 16px; text-align: center; font-size: 24px">
    <a style="margin: 10px" class="active text" href="/">Home</a>
    <a style="margin: 10px" class="text" href="script — копия 3.html">Contact</a>
    <a style="margin: 10px" class="text" href="/profile">Profile</a>
    <h1>C A N C E R | F U N D</h1>
</div>
<div class="container">
    <h4 class="display-5">Sick children</h4>
    <fieldset class="border border-2 p-3">
        <div class="row">
            <% children.forEach(function(child) { %>
                <div class="col-3">
                    <div class="card" style="width: 16rem;">
                        <div class="card-body" style="height: 7rem">
                            <h5 class="card-title"><%= child.first_name %> <%= child.last_name %></h5>
                            <p class="card-text">Country: <%= child.country %>, age: <%= child.age %> y.o.</p>
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item" style="height: 4rem">Diagnosis: <%= child.diagnosis %></li>
                            <li class="list-group-item">Stage: <%= child.stage %></li>
                        </ul>
                        <div class="card-body">
                            <a style="text-decoration: none; color: black" class="card-link"><%= child.collected %>
                                / <%= child.goal %>$</a>
                            <p>Remains to collect - <%= child.goal - child.collected %>$</p>
                            <hr>
                            <form method="post" action="/donate_paypal/<%= child._id %>">
                                <input type="number" name="amount" style="width: 30%">
                                <button style="width: 40%" class="card-link btn btn-outline-success p-1">Donate</button>
                            </form>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </fieldset>
    <br>
</div>
</body>
</html>